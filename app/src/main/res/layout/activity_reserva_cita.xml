<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    tools:context=".ReservaCitaActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="24dp"
        android:gravity="center"
        android:background="@drawable/form_background"
        android:padding="24dp"
        android:elevation="6dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <EditText
            android:id="@+id/editTextFecha"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/edt_background"
            android:padding="12dp"
            android:hint="Fecha de tu cita"
            android:textColorHint="#AAAAAA"
            android:textColor="#FFFFFF"
            android:inputType="text"
            android:layout_marginTop="16dp"
            android:drawableLeft="@drawable/ic_calendar"
            android:drawablePadding="10dp"
            tools:ignore="SpeakableTextPresentCheck" />

        <EditText
            android:id="@+id/editTextHora"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/edt_background"
            android:padding="12dp"
            android:hint="Hora de tu cita"
            android:textColorHint="#AAAAAA"
            android:textColor="#FFFFFF"
            android:inputType="text"
            android:layout_marginTop="16dp"
            android:drawableLeft="@drawable/ic_clock"
            android:drawablePadding="10dp"
            tools:ignore="SpeakableTextPresentCheck" />

        <EditText
            android:id="@+id/editTextEmpleado"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/edt_background"
            android:padding="12dp"
            android:hint="Empleado que te atendera"
            android:textColorHint="#AAAAAA"
            android:textColor="#FFFFFF"
            android:inputType="text"
            android:layout_marginTop="16dp"
            android:drawableLeft="@drawable/ic_user"
            android:drawablePadding="10dp"
            tools:ignore="SpeakableTextPresentCheck" />

        <Button
            android:id="@+id/botonReservar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="12dp"
            android:text="Reservar Cita"
            android:backgroundTint="#000000"
            android:textColor="#FFFFFF" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>

